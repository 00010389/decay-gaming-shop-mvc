@model IEnumerable<ShopMVC.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Products</h2>

<div class="products-grid">
    @foreach (var item in Model)
    {
        <div class="product">
            <div class="product__img-container">
                <img src=@Html.DisplayFor(modelItem => item.ImageSrc) />
            </div>
            <h3>@Html.DisplayFor(modelItem => item.Name)</h3>
            <p>@Html.DisplayFor(modelItem => item.Price)</p>
            <p>Rating: @Html.DisplayFor(modelItem => item.Rating)</p>
            <div class="product__actions">
                <button>@Html.ActionLink("Edit", "Edit", new { id = item.Id })</button>
                <button>@Html.ActionLink("Details", "Details", new { id = item.Id })</button>
                <button>@Html.ActionLink("Delete", "Delete", new { id = item.Id })</button>
            </div>
        </div>
    }
</div>

<style>
    .products-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 40px 20px;
    }

    .product__img-container {
        height: 200px;
    }

    .products-grid img {
        width: 100%;
        height: 100%;
        object-fit: contain;
    }
</style>